{
  "name": "firebase-stripe-payments",
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "scripts": {
    "prepare": "npm run build",
    "clean": "rimraf lib",
    "build": "tsc -p tsconfig.build.json",
    "build:watch": "tsc -p tsconfig.build.json --watch",
    "compile": "tsc",
    "generate-readme": "firebase ext:info .. --markdown > ../README.md",
    "test": "cd ../_emulator && firebase emulators:exec -P demo-project \"INTEGRATION_TEST=true jest --config=../functions/jest.config.js\"",
    "test:unit": "jest --config=jest.config.js",
    "start:emulator": "cd ../_emulator && firebase emulators:start -P demo-project",
    "exec:emulator": "cd ../_emulator && firebase emulators:exec \"../runTests.sh\" -P demo-project",
    "exec:emulator:watch": "cd ../_emulator && firebase emulators:exec \"../runTestsWatch.sh\" -P demo-project",
    "setup:webhooks": "ts-node ./__tests__/helpers/setupProxy.ts",
    "publish-new-version": "firebase ext:dev:upload dragoscv/firebase-stripe-payments --repo=https://github.com/dragoscv/stripe-firebase --root=firebase-stripe-payments --ref=master --project invertase-firebase-extensions"
  },
  "author": "Dragos Catalin (https://dragoscatalin.ro/)",
  "license": "Apache-2.0",
  "dependencies": {
    "firebase-admin": "^13.5.0",
    "firebase-functions": "^6.5.0",
    "stripe": "^19.1.0",
    "typescript": "^5.9.3"
  },
  "devDependencies": {
    "@faker-js/faker": "^6.0.0",
    "@types/express": "^4.17.13",
    "@types/jest": "^29.5.14",
    "dotenv": "^16.5.0",
    "envfile": "^6.17.0",
    "firebase-functions-test": "^3.4.1",
    "jest": "^29.7.0",
    "mocked-env": "^1.3.5",
    "node-mocks-http": "^1.17.2",
    "playwright": "^1.52.0",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.3.4",
    "ts-node": "^10.9.2"
  },
  "prettier": {
    "singleQuote": true,
    "printWidth": 80
  },
  "private": true
}